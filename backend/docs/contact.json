{
  "openapi": "3.0.3",
  "info": {
    "title": "Contact API",
    "version": "1.0.0",
    "description": "Gestion des contacts protégée par JWT"
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/contact": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Lister tous les contacts",
        "responses": {
          "200": {
            "description": "Liste des contacts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Contact" }
                }
              }
            }
          },
          "400": {
            "description": "Erreur de récupération",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "summary": "Créer un contact",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContactCreate" },
              "example": {
                "first_name": "Ada",
                "last_name": "Lovelace",
                "phone_number": "0612345678"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact créé",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Nouveau Contact enregistré !" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erreur de validation",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/contact/{id}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Récupérer un contact par ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Contact trouvé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Contact" }
              }
            }
          },
          "404": {
            "description": "Contact introuvable",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "400": {
            "description": "Erreur de requête",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Contacts"],
        "summary": "Modifier un contact par ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContactCreate" },
              "example": {
                "first_name": "Grace",
                "last_name": "Hopper",
                "phone_number": "0698765432"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contact modifié",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Contact modifié avec succès!" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Contact introuvable",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "400": {
            "description": "Erreur de validation",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Supprimer un contact par ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Contact supprimé",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Contact supprimé !" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Contact introuvable",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "400": {
            "description": "Erreur de requête",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Contact": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "66f0a7b2c3e0a1d2e3f4a5b6" },
          "first_name": { "type": "string", "example": "Ada" },
          "last_name": { "type": "string", "example": "Lovelace" },
          "phone_number": { "type": "string", "example": "0612345678" }
        },
        "required": ["_id", "first_name", "last_name", "phone_number"]
      },
      "ContactCreate": {
        "type": "object",
        "required": ["first_name", "last_name", "phone_number"],
        "properties": {
          "first_name": { "type": "string", "example": "Ada" },
          "last_name": { "type": "string", "example": "Lovelace" },
          "phone_number": {
            "type": "string",
            "pattern": "^[0-9]{10}$",
            "example": "0612345678"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "message": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  }
}
